# Anny Body Fitter - Environment Configuration Example
# Copy this file to .env and update with your values

# ==========================================
# Application Settings
# ==========================================
ENVIRONMENT=development  # development, staging, production
DEBUG=True
LOG_LEVEL=INFO
LOG_FILE=logs/anny-fitter.log

# ==========================================
# API Configuration
# ==========================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
API_WORKERS=1  # Use multiple workers in production

# ==========================================
# Database Configuration
# ==========================================
# SQLite (Development)
DATABASE_URL=sqlite:///./anny_fitter.db

# PostgreSQL (Production)
# DATABASE_URL=postgresql://user:password@localhost:5432/anny_fitter

# Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ==========================================
# Security Settings
# ==========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-secret-key-in-production

# Encryption key (base64 encoded)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-base64-encoded-encryption-key

# JWT Settings
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# ==========================================
# CORS Configuration
# ==========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8000

# Set to false in production
CORS_ALLOW_CREDENTIALS=True

# ==========================================
# File Upload Settings
# ==========================================
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=/tmp/anny-uploads
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.bmp

# Temporary file retention (hours)
TEMP_FILE_RETENTION_HOURS=24

# ==========================================
# Model Configuration
# ==========================================
MODEL_PATH=models/
MODEL_DEVICE=cuda  # cuda or cpu
MODEL_CACHE_SIZE=3

# Anny model settings
ANNY_MODEL_VERSION=1.0.0

# ==========================================
# Vision Processing
# ==========================================
# MediaPipe settings
MEDIAPIPE_MODEL_COMPLEXITY=1  # 0, 1, or 2
MEDIAPIPE_MIN_DETECTION_CONFIDENCE=0.5
MEDIAPIPE_MIN_TRACKING_CONFIDENCE=0.5

# Image preprocessing
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
IMAGE_QUALITY=85

# ==========================================
# Performance Settings
# ==========================================
ENABLE_CACHING=True
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# ==========================================
# Monitoring & Logging
# ==========================================
# Sentry (Error tracking)
SENTRY_DSN=

# Prometheus
ENABLE_METRICS=True
METRICS_PORT=9090

# ==========================================
# Email Configuration (Optional)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@example.com

# ==========================================
# Third-party Services (Optional)
# ==========================================
# AWS S3 for file storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=anny-uploads

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# ==========================================
# Testing Configuration
# ==========================================
TEST_DATABASE_URL=sqlite:///./test_anny_fitter.db
